<MyGridLayout>

    name:name
    pizza:pizza
    position:position

    GridLayout:
        cols:1
        size: root.width, root.height

        GridLayout:
            cols:2

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Favorite Pizze"
            TextInput:
                id: pizza
                multiline: False

            Label:
                text: "Favorite Color"
            TextInput:
                id: position
                multiline: False

        Button:
            text: "Submit"
            font_size: 32
            on_press: root.press()
            background_color: (1,1,1,1)


