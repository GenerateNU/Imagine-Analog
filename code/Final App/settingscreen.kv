<SettingsScreen>
    name: "settings"
    canvas:
        Color:
            rgba: 0.5, 0.5, 0.5, 0.5
        Rectangle: #woohoo!!!
            size: 800, 405
            pos: self.pos
    
    #Makes the home screen and home bar
    GridLayout:
        cols: 1
        size: root.width, root.height

        # Home Bar
        BoxLayout:
            orientation: "horizontal"
            size_hint_y: None
            height: 75
            #Settings Button
            Button:
                size_hint_x: None
                width: 65
                background_normal: ''
                background_color: (0,0,0,1)
                on_press: app.root.current = "home"

                Image:
                    source: 'images/arrow1.png'
                    size_hint_y: None
                    height: 35
                    center_x: self.parent.center_x
                    center_y: self.parent.center_y
                
            #Settings Name
            Label: 
                #text_size: self.size
                text: "Settings"
                background_color: (0,0,0,1)
                #font_size: 15
                #size_hint_y: None
                #height: 20

                canvas.before:
                    Color:
                        rgba: self.background_color
                    Rectangle:
                        size: self.size
                        pos: self.pos

            #Blank Space
            Button:
                size_hint_x: None
                width: 550
                background_color: (0,0,0,1)

        
        GridLayout:
            cols: 1
        #size: root.width, root.height
            Button:
                size_hint_y: None
                width: 250
                background_color: (0,0,0,0)

            Label:
                text: "Volume:  " + str(volslider.value)

            Slider:
                id: volslider
                min: 0
                max: 100
                step: 1
                orientation: 'horizontal'
            
            Button:
                size_hint_y: None
                width: 250
                background_color: (0,0,0,0)

            Label:
                text: "Brightness:  " + str(slider.value)

            Slider:
                id: slider
                min: 0
                max: 100
                step: 1
                orientation: 'horizontal'

            Button:
                size_hint_y: None
                width: 250
                background_color: (0,0,0,0)

            AnchorLayout:
                anchor_x: 'center'
                anchor_y: 'bottom'
            
                Button:
                    id: btnExit
                    text: "Exit Program"
                    size_hint_y: None
                    height: 50
                    #size_hint_x: None
                    #width: 250
                    on_press: app.stop()
                    pos_hint: {'center_x': 'top_y'} 
                    background_color: (1,0,0,1)

        